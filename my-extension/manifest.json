{
  "manifest_version": 3,
  "name": "Notedly - Study Tool Generator",
  "version": "1.0",
  "description": "Select PDF files on Canvas and generate study tools",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://*.instructure.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.instructure.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
