{
  "manifest_version": 3,
  "name": "Study Tool Generator",
  "version": "1.0",
  "description": "Generate study tools from PDFs in Canvas.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://canvas.nd.edu/*",
    "http://127.0.0.1/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://canvas.nd.edu/*"],
      "js": ["content.js"]
    }
  ]
}
